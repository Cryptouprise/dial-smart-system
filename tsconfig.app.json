{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Gradually enable for better type safety */
    "strict": false,                      // TODO: Enable once codebase is refactored
    "noUnusedLocals": false,              // TODO: Clean up unused variables first
    "noUnusedParameters": false,          // TODO: Clean up unused parameters first
    "noImplicitAny": false,               // TODO: Add proper types throughout codebase
    "noFallthroughCasesInSwitch": true,   // ENABLED: Catch bugs in switch statements
    "forceConsistentCasingInFileNames": true,  // ENABLED: Prevent import casing issues
    "noImplicitReturns": false,           // TODO: Ensure all code paths return values
    "noUncheckedIndexedAccess": false,    // TODO: Add runtime checks for array access

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
